<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_2442923_7895076"
        tools:context=".fragments.HomeFragment">

        <Button
            android:id="@+id/btn_home_login"
            android:layout_width="350dp"
            android:layout_height="160dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/custom_bienvenida_button"
            android:fontFamily="@font/basefont"
            android:padding="20dp"
            android:text="Ingresar"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text"
            android:textSize="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_home_sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="428dp"
            android:background="@drawable/custom_bienvenida_button_alt"
            android:fontFamily="@font/basefont"
            android:padding="20dp"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text"
            android:textSize="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_home_gogle"
            android:layout_width="314dp"
            android:layout_height="108dp"
            android:background="@drawable/boton_google"
            android:drawableStart="@drawable/google"
            android:fontFamily="@font/basefont"
            android:padding="20dp"
            android:text="Google"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.305"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928" />

        <Button
            android:id="@+id/btn_home_facebook"
            android:layout_width="314dp"
            android:layout_height="108dp"
            android:background="@drawable/boton_facebook"
            android:drawableStart="@drawable/facebook"
            android:fontFamily="@font/basefont"
            android:padding="20dp"
            android:text="Facebook"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text"
            android:textSize="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.722"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.928" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>