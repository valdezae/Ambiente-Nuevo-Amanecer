<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/button_kids_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/design_default_color_secondary_variant"/> <!-- Pressed color (e.g., gold) -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
    <item>

        <shape>
            <solid android:color="#F24535"/> <!-- Default color (e.g., light salmon) -->
            <corners android:radius="12dp"/>
        </shape>
    </item>
</selector>

